<h1 class="font-bold text-4xl text-cyan-700 flex-col mb-6">Articles</h1>
<div class="p-5 bg-gray-100 rounded-lg shadow-md">
  <ul class="space-y-4">
    <% @articles.each do |article| %>
      <li class="border-b border-gray-300 pb-2">
        <%= link_to article.title, article, class: "font-bold text-lg text-blue-600 hover:underline" %>
      </li>
    <% end %>
  </ul>

  <div class="mt-6">
    <%= link_to "New Article", new_article_path, class: "inline-block bg-blue-500 text-white font-semibold py-2 px-4 rounded hover:bg-blue-700" %>
  </div>
</div>